{{!-- <h1> Gigs Template </h1> --}}
<section id="gigs" class="container">
    <div class="title"><h1>All Gigs</h1></div>    

    {{#each gigs}}

    <div class="gig">

        {{!-- <h3>Looking for a react developer</h3> --}}
        <h3>{{id}}.  {{title}}</h3>
        {{!-- <p>sbdfkgvbcrsceuyhaswkjhncdsvxn</p> --}}
        <p>{{description}}</p>

        <ul>
            {{!-- <li>Budget: $10,000</li> --}}
            <li>Budget: {{budget}}</li>
            {{!-- <a><a href="#" class="btn btn-reverse">Apply Now</a></a> --}}
            <li><a href="mailto:{{contact_email}}" class="btn btn-primary">Apply Now</a></li>
        </ul>

        <div class="tech">
            {{!-- <small>Technologies Needed! <span>react, redux, javascript</span></small> --}}
            <p>Technologies : <span>{{technologies}}</span></p>
        </div>

    </div>

    {{!-- {{else}}
    <p>No gigs available</p> --}}

    {{/each}}

</section>